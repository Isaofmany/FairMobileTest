<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ImageView Styles-->

    <style name="image_def">
        <item name="android:layout_width">@dimen/dim25</item>
        <item name="android:layout_height">@dimen/dim25</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="image_lrg">
        <item name="android:layout_width">@dimen/dim50</item>
        <item name="android:layout_height">@dimen/dim50</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Text Styles-->
    <style name="text_def">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt20</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="text_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dim5</item>
        <item name="android:textSize">@dimen/txt20</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt25</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="text_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt17</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
